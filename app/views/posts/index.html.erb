<div class="row blog_index">
  <div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
    <h1>Blog posts</h1>

    <% if @post.any? %>
      <% @post.each do |post| %>
        <div class="post">
           <h2><%= link_to post.title, post %></h2>
           <h5>Added <%= post.created_at.strftime("%d %B %Y") %></h5>
           <h4><%= post.body[0,100] %> ...</h3>
           <div class="line"></div>
        </div>
      <% end %>
    <% end %>

    <% if user_signed_in? %>
       <%= link_to 'logout', destroy_user_session_path, :method => :delete, class:"btn btn-default back_button" %>
    <% else %>
      <%= link_to 'login', new_user_session_path, class:"btn btn-default back_button" %>
    <% end %>
    <%= link_to "Go back to website", root_path, class:"btn btn-default back_button" %>
  </div>
</div>
