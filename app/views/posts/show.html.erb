<div class="row blog_post">
  <div class="col-md-8 col-md-offset-2">
    <h1>
      <%= @post.title %>
    </h1>

    <h4>
      Added <%= time_ago_in_words(@post.created_at) %> ago
    </h4>

    <p>
      <%= @post.body %>
    </p>

    <% if user_signed_in? %>
      <%= link_to "edit", edit_post_path(@post), class:"btn btn-default back_button" %> 
      <%= link_to "delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-default back_button" %>
    <% end %>

    <%= link_to "Back to all posts", posts_path, class:"btn btn-default back_button" %>
  </div>
</div>
