<div class="row blog" id="blog">
  <h1>BLOG</h1>
  <% if @post.any? %>
    <% @post.each do |post| %>
      <div class="post">
         <h2><%= link_to post.title, post %></h2>
         <h5>Added <%= post.created_at.strftime("%d %B %Y") %></h5>
      </div>
    <% end %>
  <% end %>

  <%= link_to "View all posts", posts_path, class:"view_all" %>
</div><!-- end of blog -->

<div class="row contact" id="contact">
  <h1>CONTACT US</h1>
  <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <div class="form-area">
      <form role="form">
        <%= form_for @contact do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder:"Your Name", required: true, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, placeholder:"Your Email", required: true, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_area :message, placeholder:"Your Message", as: :text, class:"form-control" %>
          </div>
            <%= f.submit "Send Message", class:"btn btn-primary pull-left" %>
        <% end %>
      </form>
    </div>
  </div>
</div><!-- end of contact us -->

